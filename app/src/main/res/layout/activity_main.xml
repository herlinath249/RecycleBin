<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/img_crafts"
            android:layout_width="94dp"
            android:layout_height="101dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="337dp" />

        <ImageView
            android:id="@+id/img_idea"
            android:layout_width="94dp"
            android:layout_height="101dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="337dp" />

        <TextView
            android:id="@+id/txt_craft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="280dp"
            android:text="My Craft" />

        <TextView
            android:id="@+id/txt_idea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-120dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="My Idea" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/daur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="265dp"
        android:background="#FFC107"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txt_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="320dp"
            android:text="HOME"
            android:textColor="#F7F3F3"
            android:textColorHighlight="#FDFBFB" />

        <TextView
            android:id="@+id/txt_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="100dp"
            android:text="Recycle Bin"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>